{
  "ConnectionStrings": {
    "SQLConnection": "Server=localhost;Database=AperturePlus_Identity;User Id=sa;Password=PLACEHOLDER_IN_USER_SECRETS;TrustServerCertificate=True",
    "RabbitMQConnection": "PLACEHOLDER_IN_USER_SECRETS"
  },
  "JwtSettings": {
    "Issuer": "AperturePlus.IdentityService",
    "Audience": "AperturePlus.Clients",
    "ExpiryMinutes": 60
  },
  "RoleSettings": {
    "Roles": [
      "Admin",
      "User",
      "Photographer",
      "Model",
      "Requester"
    ]
  },
  "Exceptionless": {
    "ApiKey": "YOUR_EXCEPTIONLESS_API_KEY" 
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information", // 默认记录 Information 及更高级别的日志
      "Override": {
        "Microsoft": "Warning", // 压制 ASP.NET Core 自身的冗余日志
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ], // 添加额外的上下文信息
    "WriteTo": [
      // 开发时写入控制台
      { "Name": "Console" },
      // 写入 Exceptionless
      {
        "Name": "Exceptionless",
        "Args": {
          "apiKey": "YOUR_EXCEPTIONLESS_API_KEY"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
